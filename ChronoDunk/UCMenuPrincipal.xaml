<UserControl x:Class="ChronoDunk.UCMenuPrincipal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChronoDunk"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="711">
    <Canvas x:Name="canvasMenuPrincipal">
        <Image x:Name="ImgFondMenuPrincipal" Height="468" Source="/images/decor_menu_principal.jpg" Stretch="Fill" Width="800" HorizontalAlignment="Center" Canvas.Left="-44" VerticalAlignment="Center"/>
        <Label x:Name="labNomJeu" Content="CHRONO DUNK" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="129" Canvas.Top="49" Foreground="White" FontFamily="./fonts/#Irish Grover" FontSize="66" Background="#00000000"/>
        <Label Content="Meilleur score : 28" FontFamily="./fonts/#Irish Grover" Canvas.Left="-23" Canvas.Top="26" Foreground="#FFEDDC1F" RenderTransformOrigin="0.5,0.5" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Label.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="-11.041"/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>

        <Image Height="130" Canvas.Left="552" Source="/images/logo_chronodunk.png" Stretch="Fill" Canvas.Top="172" Width="238" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="14.63"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Button x:Name="buttonJeu" Content="JOUER" FontSize="52" Canvas.Left="248" Canvas.Top="186" Background="#FFFF6F00" Foreground="White" BorderBrush="White" FontFamily="./fonts/#Irish Grover" Height="78" Width="214" HorizontalAlignment="Center" VerticalAlignment="Top" Click="buttonJeu_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="buttonQuitter" Content="QUITTER" Height="40" Canvas.Left="10" Canvas.Top="384" Width="130" Background="#FFFF6F00" BorderBrush="White" Foreground="White" FontFamily="./fonts/#Irish Grover" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Click="buttonQuitter_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
            BorderBrush="{TemplateBinding BorderBrush}"
            BorderThickness="{TemplateBinding BorderThickness}"
            CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="buttonRegles" Content="RÈGLES" Height="39" Canvas.Left="571" Canvas.Top="385" Width="130" Background="#FFFF6F00" BorderBrush="White" Foreground="White" FontFamily="./fonts/#Irish Grover" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Click="buttonRegles_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                 BorderBrush="{TemplateBinding BorderBrush}"
                         BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <Button x:Name="buttonEntrainement" Content="ENTRAINEMENT" Height="45" Canvas.Left="205" Canvas.Top="297" Width="300" Background="#FFFF6F00" BorderBrush="White" Foreground="White" FontFamily="./fonts/#Irish Grover" FontSize="32" HorizontalAlignment="Center" VerticalAlignment="Top" Click="buttonEntrainement_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                      BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" Margin="{TemplateBinding Padding}"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Canvas>
</UserControl>
