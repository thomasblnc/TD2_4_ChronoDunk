<UserControl x:Class="ChronoDunk.UCModeEntrainement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChronoDunk"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280"
             Focusable="True"
             KeyDown="OnKeyDown" KeyUp="OnKeyUp"
             MouseDown="OnMouseDown" MouseUp="OnMouseUp" MouseMove="OnMouseMove">

    <UserControl.Resources>
        <Style x:Key="StyleBoutonPauseAnime" TargetType="Button">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="Black">

        <Canvas x:Name="GameCanvas" Background="Transparent" MouseLeftButtonDown="GameCanvas_Click">

            <Image Source="/images/background.jpg" Stretch="Fill" Width="1280" Height="720" IsHitTestVisible="False"/>

            <ProgressBar x:Name="SuperBar" Width="200" Height="20" Canvas.Left="10" Canvas.Bottom="10" Background="Gray" Foreground="OrangeRed" Value="0" Maximum="100"/>
            <TextBlock Text="PUISSANCE" Canvas.Left="15" Canvas.Bottom="12" Foreground="White" FontWeight="Bold" FontSize="10" IsHitTestVisible="False"/>

            <Polyline x:Name="TrajectoryLine" Stroke="Yellow" StrokeThickness="5" StrokeDashArray="4 2" Opacity="0.8" IsHitTestVisible="False"/>

            <Rectangle x:Name="HitboxBackboardRight" Fill="Red" Opacity="0" Width="34" Height="103" Canvas.Top="175" Canvas.Left="1075"/>
            <Rectangle x:Name="HitboxHoopRight" Fill="Lime" Opacity="0" Width="39" Height="10" Canvas.Top="273" Canvas.Left="1005"/>
            <Rectangle x:Name="HitboxBackboardLeft" Fill="Red" Opacity="0" Width="34" Height="103" Canvas.Top="180" Canvas.Left="188" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Rectangle x:Name="HitboxHoopLeft" Fill="Lime" Opacity="0" Width="39" Height="10" Canvas.Top="278" Canvas.Left="233"/>

            <Image x:Name="Player" Source="/images/player.png" Height="300" Width="200" Canvas.Top="364" Canvas.Left="200" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <ScaleTransform ScaleX="1"/>
                </Image.RenderTransform>
            </Image>

            <Image x:Name="Ball" Source="/images/ballon.png" Height="80" Width="80" Canvas.Top="186" Canvas.Left="600" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Image.RenderTransform>
                    <RotateTransform Angle="0"/>
                </Image.RenderTransform>
            </Image>

            <Grid>

                <Button x:Name="buttonPause" 
            Click="PauseButton_Click"
            Style="{StaticResource StyleBoutonPauseAnime}"
            Background="#FFFF6F00"
            BorderBrush="White"
            BorderThickness="1"
            HorizontalAlignment="Left" VerticalAlignment="Top" 
            Margin="26,27,0,0" 
            Width="40" Height="40">
                    <Image x:Name="imgPause" Source="/images/buttonPause.png" Stretch="Uniform"/>
                </Button>
            </Grid>

            <StackPanel Canvas.Left="540" Canvas.Top="88" Width="200" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Border Background="#E5000000" CornerRadius="5" HorizontalAlignment="Center" Padding="10,5">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock x:Name="PlayerScoreText" Text="0" Foreground="Yellow" FontSize="30" FontWeight="Bold" Margin="0,0,40,0"/>
                        <TextBlock Text="-" Foreground="White" FontSize="30" FontWeight="Bold"/>
                        <TextBlock x:Name="EnemyScoreText" Text="0" Foreground="Red" FontSize="30" FontWeight="Bold" Margin="40,0,0,0"/>
                    </StackPanel>
                </Border>
                <Grid Margin="0,2,0,0">
                    <TextBlock Text="TOI" Foreground="Yellow" FontSize="10" HorizontalAlignment="Left" Margin="10,10,0,0" FontWeight="Bold"/>
                    <TextBlock Text="ADV" Foreground="Red" FontSize="10" HorizontalAlignment="Right" Margin="0,10,10,0" FontWeight="Bold"/>
                </Grid>
            </StackPanel>

            <Canvas x:Name="canvasMenuPause" Visibility="Visible" Background="#CC000000" Height="492" Canvas.Left="277" Canvas.Top="114" Width="726">

                <TextBlock x:Name="textMenu" Text="Menu Pause" Canvas.Left="189" Canvas.Top="10" FontFamily="./fonts/#Irish Grover" FontSize="64" Foreground="Yellow" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBlock x:Name="FinalScoreText" Text="00 - 00" Canvas.Left="309" Canvas.Top="118" FontFamily="./fonts/#Irish Grover" FontSize="32" Foreground="#FFFF5200" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <Image x:Name="imgLogoMenuPause" Source="/images/logo_chronodunk.png" Canvas.Left="475" Canvas.Top="202" Width="319" Height="174" Stretch="Fill" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="15.594"/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>

                <Image x:Name="imgPersoMenuPause" Source="/images/personnage_chronodunk.png" Canvas.Left="-76" Canvas.Top="96" Width="366" Height="396" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="7.844"/>
                        </TransformGroup>
                    </Image.RenderTransform>
                </Image>
                <Button x:Name="buttonQuitter" 
                Click="buttonQuitter_Click"
                Content="QUITTER" 
                Canvas.Left="244" Canvas.Top="396" 
                Width="238" Height="56" 
                Padding="10,8,10,10"
                FontSize="20" FontFamily="./fonts/#Irish Grover" 
                Foreground="White" Background="#FFFF6F00" BorderBrush="White"
                HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <Button x:Name="buttonReprendre" 
                Click="buttonReprendre_Click"
                Content="REPRENDRE" 
                Canvas.Left="244" Canvas.Top="191" 
                Width="238" Height="55" 
                Padding="15,8,10,10"
                FontSize="20" FontFamily="./fonts/#Irish Grover" 
                Foreground="White" Background="#FFFF6F00" BorderBrush="White"
                HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <Button x:Name="buttonOptions" 
                Click="ButtonOptions_Click"
                Content="OPTIONS" 
                Canvas.Left="244" Canvas.Top="294" 
                Width="238" Height="54" 
                Padding="15,8,10,10"
                FontSize="20" FontFamily="./fonts/#Irish Grover" 
                Foreground="#FFC1C0C0" Background="Gray" BorderBrush="White"
                HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="0.535,2"/>
            </Canvas>

        </Canvas>
    </Grid>
</UserControl>