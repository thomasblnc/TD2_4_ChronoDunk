<UserControl x:Class="ChronoDunk.UCModeEntrainement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChronoDunk"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Style x:Key="StyleBoutonPauseAnime" TargetType="Button">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Image Margin="-45,-10,-45,-20" Source="/images/background_court_2.jpg" Stretch="Fill"/>
        <Image Margin="200,127,238,-54" Source="/images/personnage_chronodunk.png" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.193"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>

        <Canvas x:Name="canvasMenuPause" 
                Visibility="Collapsed"
                Background="#CC000000" 
                Margin="128,76,128,76">

            <TextBlock x:Name="textMenu" Text="Menu Pause" Canvas.Left="158" Canvas.Top="10" FontFamily="./fonts/#Irish Grover" FontSize="42" Foreground="Yellow" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <TextBlock x:Name="textScore" Text="Score ; 28" Canvas.Left="215" Canvas.Top="66" FontFamily="./fonts/#Irish Grover" FontSize="24" Foreground="#FFFF5200" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <Image x:Name="imgLogoMenuPause" Source="/images/logo_chronodunk.png" Canvas.Left="341" Canvas.Top="170" Width="245" Height="134" Stretch="Fill" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="15.594"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>

            <Image x:Name="imgPersoMenuPause" Source="/images/personnage_chronodunk.png" Canvas.Left="-42" Canvas.Top="53" Width="251" Height="271" Stretch="Fill" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="7.844"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>

            <Button x:Name="buttonQuitter" 

            Click="buttonQuitter_Click"

            Content="QUITTER" 

            Canvas.Left="185" Canvas.Top="210" 

            Width="173" Height="40" 

            Padding="10,8,10,10" Margin="10,0,0,0"

            FontSize="20" FontFamily="./fonts/#Irish Grover" 

            Foreground="White" Background="#FFFF6F00" BorderBrush="White"

            HorizontalAlignment="Center" VerticalAlignment="Top"/>



            <Button x:Name="buttonReprendre" 

            Click="buttonReprendre_Click"

            Content="REPRENDRE" 

            Canvas.Left="195" Canvas.Top="138" 

            Width="173" Height="40" 

            Padding="15,8,10,10"

            FontSize="20" FontFamily="./fonts/#Irish Grover" 

            Foreground="White" Background="#FFFF6F00" BorderBrush="White"

            HorizontalAlignment="Center" VerticalAlignment="Top"/>

        </Canvas>

        <Button x:Name="buttonPause" 
                Click="PauseButton_Click"
                Style="{StaticResource StyleBoutonPauseAnime}"
                Background="#FFFF6F00"
                BorderBrush="White"
                BorderThickness="1"
                HorizontalAlignment="Left" VerticalAlignment="Top" 
                Margin="26,27,0,0" 
                Width="40" Height="40">
            <Image x:Name="imgPause" Source="/images/buttonPause.png" Stretch="Uniform"/>
        </Button>

    </Grid>
</UserControl>