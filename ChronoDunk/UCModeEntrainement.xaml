<UserControl x:Class="ChronoDunk.UCModeEntrainement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChronoDunk"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280"
             Focusable="True"
             KeyDown="OnKeyDown" KeyUp="OnKeyUp"
             MouseDown="OnMouseDown" MouseUp="OnMouseUp" MouseMove="OnMouseMove">

    <UserControl.Resources>
        <SolidColorBrush x:Key="ColorPrimary" Color="#FFFF6F00"/>
        <SolidColorBrush x:Key="ColorAlert" Color="#FFFF5200"/>
        <SolidColorBrush x:Key="ColorTextYellow" Color="Yellow"/>
        <SolidColorBrush x:Key="ColorOverlay" Color="#CC000000"/>
        <FontFamily x:Key="FontIrish">./fonts/#Irish Grover</FontFamily>
        <FontFamily x:Key="FontConsolas">Consolas</FontFamily>

        <Style x:Key="StyleBtnPause" TargetType="Button">
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="White" BorderThickness="1" CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Cursor" Value="Hand"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StyleBtnMenu" TargetType="Button">
            <Setter Property="FontFamily" Value="{StaticResource FontIrish}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{StaticResource ColorPrimary}"/>
            <Setter Property="BorderBrush" Value="White"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="Width" Value="240"/>
            <Setter Property="Margin" Value="0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Background" Value="{StaticResource ColorAlert}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="Black">

        <Canvas x:Name="canvasJeu" Background="Transparent" MouseLeftButtonDown="GameCanvas_Click">

            <Image Source="/images/background.jpg" Stretch="Fill" Width="1280" Height="720" IsHitTestVisible="False"/>

            <Polyline x:Name="TrajectoireBalle" Stroke="Yellow" StrokeThickness="5" StrokeDashArray="4 2" Opacity="0.8" IsHitTestVisible="False"/>

            <Rectangle x:Name="collisionPanierDroit" Fill="Red" Opacity="0" Width="34" Height="103" Canvas.Top="175" Canvas.Left="1075"/>
            <Rectangle x:Name="zoneScorePanierDroit" Fill="Lime" Opacity="0" Width="39" Height="10" Canvas.Top="273" Canvas.Left="1005"/>
            <Rectangle x:Name="collisionPanierGauche" Fill="Red" Opacity="0" Width="34" Height="103" Canvas.Top="180" Canvas.Left="188"/>
            <Rectangle x:Name="zoneScorePanierGauche" Fill="Lime" Opacity="0" Width="39" Height="10" Canvas.Top="278" Canvas.Left="233"/>

            <Image x:Name="Joueur" Source="/images/player.png" Height="300" Width="200" Canvas.Top="364" Canvas.Left="200" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <ScaleTransform ScaleX="1"/>
                </Image.RenderTransform>
            </Image>

            <Image x:Name="Balle" Source="/images/ballon.png" Height="80" Width="80" Canvas.Top="186" Canvas.Left="600" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <RotateTransform Angle="0"/>
                </Image.RenderTransform>
            </Image>

            <ProgressBar x:Name="SuperBar" Width="200" Height="20" Canvas.Left="10" Canvas.Top="640" Background="Gray" Foreground="OrangeRed" Value="0" Maximum="100"/>
            <TextBlock Text="PUISSANCE" Canvas.Left="15" Canvas.Top="643" Foreground="White" FontWeight="Bold" FontSize="10" IsHitTestVisible="False"/>
        </Canvas>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,88,0,0">
            
            <Border Background="#E5000000" CornerRadius="5" Padding="10,5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock x:Name="PlayerScoreText" Text="0" Foreground="{StaticResource ColorTextYellow}" FontSize="30" FontWeight="Bold" Margin="0,0,40,0"/>
                    <TextBlock Text="-" Foreground="White" FontSize="30" FontWeight="Bold"/>
                    <TextBlock x:Name="EnemyScoreText" Text="0" Foreground="Red" FontSize="30" FontWeight="Bold" Margin="40,0,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <Button x:Name="buttonPause" Click="PauseButton_Click" Style="{StaticResource StyleBtnPause}" Background="{StaticResource ColorPrimary}" 
                Width="40" Height="40" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="26,27,0,0">
            <Image x:Name="imgPause" Source="/images/buttonPause.png" Stretch="Uniform"/>
        </Button>

        <Grid x:Name="canvasMenuPause" Visibility="Collapsed" Background="{StaticResource ColorOverlay}">
            <Grid Width="726" Height="492" HorizontalAlignment="Center" VerticalAlignment="Center">

                <TextBlock x:Name="textMenu" Text="Menu Pause" Margin="189,10,0,0" FontFamily="{StaticResource FontIrish}" FontSize="64" Foreground="{StaticResource ColorTextYellow}" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                <TextBlock x:Name="FinalScoreText" Text="00 - 00" Margin="0,118,0,0" FontFamily="{StaticResource FontIrish}" FontSize="32" Foreground="{StaticResource ColorAlert}" HorizontalAlignment="Center" VerticalAlignment="Top"/>

                <Image x:Name="imgLogoMenuPause" Source="/images/logo_chronodunk.png" Width="319" Height="174" Margin="475,202,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <RotateTransform Angle="15.6"/>
                    </Image.RenderTransform>
                </Image>

                <Image x:Name="imgPersoMenuPause" Source="/images/personnage_chronodunk.png" Width="366" Height="396" Margin="-76,96,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5">
                    <Image.RenderTransform>
                        <RotateTransform Angle="7.8"/>
                    </Image.RenderTransform>
                </Image>

                <StackPanel Margin="244,191,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Button x:Name="buttonReprendre" Content="REPRENDRE" Click="buttonReprendre_Click" Style="{StaticResource StyleBtnMenu}"/>
                    <Button x:Name="buttonOptions" Content="OPTIONS" Click="ButtonOptions_Click" Style="{StaticResource StyleBtnMenu}"/>
                    <Button x:Name="buttonQuitter" Content="QUITTER" Click="buttonQuitter_Click" Style="{StaticResource StyleBtnMenu}"/>
                </StackPanel>
            </Grid>
        </Grid>

        <Grid x:Name="MenuOptions" Visibility="Collapsed" Background="#E6000000">
            <Border Width="600" Height="480" CornerRadius="20" BorderBrush="{StaticResource ColorPrimary}" BorderThickness="3" Background="Black" HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Margin="30">
                    <TextBlock Text="OPTIONS" FontFamily="{StaticResource FontIrish}" FontSize="50" Foreground="{StaticResource ColorPrimary}" HorizontalAlignment="Center" Margin="0,0,0,40"/>

                    <Grid Margin="0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Contrôles :" Foreground="White" FontSize="22" VerticalAlignment="Center"/>
                        <ComboBox x:Name="ChoixControles" Grid.Column="1" FontFamily="{StaticResource FontIrish}" FontSize="18" Height="40" VerticalContentAlignment="Center" SelectedIndex="0">
                            <ComboBoxItem Content="Flèches"/>
                            <ComboBoxItem Content="ZQSD"/>
                        </ComboBox>
                    </Grid>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,50,0,0">
                        <Button Content="VALIDER" Click="ButtonValider_Click" Style="{StaticResource StyleBtnMenu}" Width="180" Background="#00AA00" Margin="10,0"/>
                        <Button Content="RETOUR" Click="ButtonRetourOptions_Click" Style="{StaticResource StyleBtnMenu}" Width="180" Margin="10,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

    </Grid>
</UserControl>