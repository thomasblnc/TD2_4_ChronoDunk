<UserControl x:Class="ChronoDunk.UCChoixAdversaire"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">

    <UserControl.Resources>
        <SolidColorBrush x:Key="ColorPrimary" Color="#FFFF6F00"/>
        <SolidColorBrush x:Key="ColorHighlight" Color="#FFFFFF"/>
        <FontFamily x:Key="FontIrish">./fonts/#Irish Grover</FontFamily>

        <Style x:Key="StyleCharButton" TargetType="Button">
            <Setter Property="Background" Value="#CC000000"/>
            <Setter Property="BorderBrush" Value="{StaticResource ColorPrimary}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Margin" Value="20"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="400"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.05" ScaleY="1.05"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Background" Value="#EE000000"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="BorderBrush" Value="Yellow"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Background="Black">
        <Image Source="/images/decor_menu_principal.jpg" Stretch="UniformToFill" Opacity="0.5"/>

        <Button x:Name="buttonRetour" Click="Back_Click"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="30,30,0,0" Width="50" Height="50"
                Background="Transparent" BorderBrush="Transparent" Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse Fill="#88000000"/>
                        <Image Source="/images/left-arrow.png" Stretch="Uniform" Margin="12"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="CHOISIS TON JOUEUR" 
                       FontFamily="{StaticResource FontIrish}" 
                       FontSize="60" 
                       Foreground="{StaticResource ColorPrimary}" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,40">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5"/>
                </TextBlock.Effect>
            </TextBlock>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <Button Click="SelectLebron_Click" Style="{StaticResource StyleCharButton}">
                    <StackPanel Margin="10">
                        <Image Source="/images/player.png" Height="220" Margin="0,0,0,20"/>
                        <TextBlock Text="HOMME" Foreground="Yellow" FontFamily="{StaticResource FontIrish}" FontSize="35" HorizontalAlignment="Center"/>
                        <TextBlock Text="Rapide &amp; Agile" Foreground="#CCC" FontSize="18" HorizontalAlignment="Center" Margin="0,5,0,0"/>

                        <Grid Margin="20,15,20,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Vitesse" Foreground="White" FontSize="14"/>
                            <ProgressBar Grid.Column="1" Value="90" Maximum="100" Height="8" Margin="10,0,0,0" Foreground="Cyan" Background="#444" BorderThickness="0"/>

                            <TextBlock Grid.Row="1" Text="Saut" Foreground="White" FontSize="14" Margin="0,5,0,0"/>
                            <ProgressBar Grid.Row="1" Grid.Column="1" Value="60" Maximum="100" Height="8" Margin="10,5,0,0" Foreground="Orange" Background="#444" BorderThickness="0"/>
                        </Grid>
                    </StackPanel>
                </Button>

                <Button Click="SelectCurry_Click" Style="{StaticResource StyleCharButton}">
                    <StackPanel Margin="10">
                        <Image Source="/images/player2.png" Height="220" Margin="0,0,0,20"/>
                        <TextBlock Text="FEMME" Foreground="Cyan" FontFamily="{StaticResource FontIrish}" FontSize="35" HorizontalAlignment="Center"/>
                        <TextBlock Text="Puissante &amp; Lourde" Foreground="#CCC" FontSize="18" HorizontalAlignment="Center" Margin="0,5,0,0"/>

                        <Grid Margin="20,15,20,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Vitesse" Foreground="White" FontSize="14"/>
                            <ProgressBar Grid.Column="1" Value="60" Maximum="100" Height="8" Margin="10,0,0,0" Foreground="Yellow" Background="#444" BorderThickness="0"/>

                            <TextBlock Grid.Row="1" Text="Saut" Foreground="White" FontSize="14" Margin="0,5,0,0"/>
                            <ProgressBar Grid.Row="1" Grid.Column="1" Value="90" Maximum="100" Height="8" Margin="10,5,0,0" Foreground="Red" Background="#444" BorderThickness="0"/>
                        </Grid>
                    </StackPanel>
                </Button>

            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl> 