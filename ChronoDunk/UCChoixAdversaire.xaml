<UserControl x:Class="ChronoDunk.UCChoixAdversaire"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Height="720" Width="1280">

    <Grid Background="#222">
        <StackPanel VerticalAlignment="Center">
            <TextBlock Text="CHOISIS TON JOUEUR" Foreground="White" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center" Margin="20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" x:Name="CharPanel">
                <Button Click="SelectLebron_Click" Margin="10" Background="Transparent" BorderThickness="0">
                    <StackPanel>
                        <Image Source="/images/player.png" Height="150"/>
                        <TextBlock Text="Homme" Foreground="Yellow" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="Puissant &amp; Lourd" Foreground="Gray" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Click="SelectCurry_Click" Margin="10" Background="Transparent" BorderThickness="0">
                    <StackPanel>
                        <Image Source="/images/player2.png" Height="150"/>
                        <TextBlock Text="Femme" Foreground="Cyan" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="Rapide &amp; Agile" Foreground="Gray" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <Button Content="RETOUR" Click="Back_Click" Width="150" Height="40" Background="Red" Margin="20"/>
        </StackPanel>
    </Grid>
</UserControl>