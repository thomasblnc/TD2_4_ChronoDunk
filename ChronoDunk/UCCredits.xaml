<UserControl x:Class="ChronoDunk.UCCredits"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">

    <UserControl.Resources>
        <SolidColorBrush x:Key="ColorPrimary" Color="#FFFF6F00"/>
        <SolidColorBrush x:Key="ColorTextWhite" Color="White"/>

        <FontFamily x:Key="FontIrish">./fonts/#Irish Grover</FontFamily>
        <FontFamily x:Key="FontStandard">Century Gothic</FontFamily>

        <Style x:Key="StyleRole" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Times New Roman"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="StyleNom" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource FontStandard}"/>
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,40"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="Black">
        <Image Source="/images/decor_menu_principal.jpg" 
               Stretch="UniformToFill" 
               Opacity="0.6"/>

        <ScrollViewer VerticalScrollBarVisibility="Auto" PanningMode="VerticalOnly">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50">

                <TextBlock Text="CHRONO DUNK"
                           FontFamily="{StaticResource FontIrish}"
                           FontSize="80"
                           Foreground="{StaticResource ColorPrimary}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock Text="ANNECY"
                           FontFamily="Times New Roman"
                           FontSize="40"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,60"
                           Opacity="0.8"/>

                <TextBlock Text="Creative Director" Style="{StaticResource StyleRole}"/>
                <TextBlock Text="Amezian Nassim &amp; Blanc Thomas" Style="{StaticResource StyleNom}"/>

                <TextBlock Text="Production Director" Style="{StaticResource StyleRole}"/>
                <TextBlock Text="Amezian Nassim &amp; Blanc Thomas" Style="{StaticResource StyleNom}"/>

                <TextBlock Text="Art Director" Style="{StaticResource StyleRole}"/>
                <TextBlock Text="Amezian Nassim &amp; Blanc Thomas" Style="{StaticResource StyleNom}"/>

                <TextBlock Text="Merci d'avoir joué !" 
                           FontFamily="{StaticResource FontIrish}" 
                           FontSize="24" 
                           Foreground="{StaticResource ColorPrimary}" 
                           HorizontalAlignment="Center" 
                           Margin="0,30,0,0"/>

            </StackPanel>
        </ScrollViewer>

        <Button x:Name="buttonRetour" Click="ButtonRetour_Click"
                HorizontalAlignment="Left" VerticalAlignment="Top"
                Margin="30,30,0,0"
                Width="50" Height="50"
                Background="Transparent" BorderBrush="Transparent" Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Ellipse Fill="#88000000"/>
                        <Image Source="/images/left-arrow.png" Stretch="Uniform" Margin="12"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="RenderTransform">
                                <Setter.Value>
                                    <ScaleTransform ScaleX="1.1" ScaleY="1.1" CenterX="25" CenterY="25"/>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
        </Button>

    </Grid>
</UserControl>